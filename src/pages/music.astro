---

import Layout from '../layouts/Layout.astro';
import Footer from "../components/Footer.astro";
import dl from "../assets/images/dream-logic-cover.jpg"



---


<Layout>
</Layout>

    <section class="relative h-[60vh] flex items-center justify-center bg-black  overflow-hidden">
  
  <div class="relative z-10 text-center">
    <h1 class="text-6xl font-extrabold bg-gradient-to-r  from-purple-500 via-pink-500 to-blue-500 bg-clip-text text-transparent">
      Tripp Life Sounds
    </h1>
    <p class="text-gray-300 mt-4 text-xl">Loops, beats, textures, and sonic worlds.</p>
  </div>
</section>


<section class="py-16 bg-black">
  <div class="max-w-6xl mx-auto px-6">
    <h2 class="text-3xl font-bold text-pink-500 text-center mb-10">Latest Releases</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
      
      <!-- Loop Kit Card -->
      <div class="bg-gray-900 rounded-xl shadow-lg overflow-hidden group hover:scale-105 transition">
       <img src={dl.src} class="w-full  object-cover object-center" alt="Dream Logic Guitar Kit" />
        <div class="p-5">
          <h3 class="text-xl font-bold text-white">Dream Logic Guitar Kit</h3>
          <p class="text-gray-400 text-sm mt-2">15 loops · stems · one-shots</p>
          <button class="mt-4 w-full bg-gradient-to-r from-stone-500 via-white-500 to-blue-500 text-white py-2 rounded-lg group-hover:opacity-90 transition">
            Download
          </button>
        </div>
      </div>
      <!-- Loop Kit Card -->
      <div class="bg-gray-900 rounded-xl shadow-lg overflow-hidden group hover:scale-105 transition">
       <img src={dl.src} class="w-full  object-cover object-center blur-md invert" alt="Dream Logic Guitar Kit" />
        <div class="p-5">
          <h3 class="text-xl font-bold text-white">Dream Logic 2 Guitar Kit</h3>
          <p class="text-gray-400 text-sm mt-2">Coming Soon</p>
          <button class="mt-4 w-full bg-gradient-to-r from-stone-500 via-white-500 to-blue-500 text-white py-2 rounded-lg group-hover:opacity-90 transition">
            Download
          </button>
        </div>
      </div>

      <!-- Repeat for more kits -->
      
    </div>
  </div>
</section>


<section class="py-12 bg-gradient-to-r bg-pink-400 from-purple-500 via-pink-500 to-blue-500 text-center">
  <h2 class="text-3xl font-bold text-white">Get Exclusive Sounds</h2>
  <p class="text-gray-200 mt-3">Sign up to get free kits, samples, and early drops.</p>
  <button class="mt-6 px-8 py-3 bg-black text-white rounded-lg hover:bg-gray-900 transition">
    Join the Tripp Life List
  </button>
</section>

<Footer />